<Window x:Class="ProyectoFinal.RentdataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal"
        mc:Ignorable="d"
        Title="RentdataWindow" Height="450" Width="800">
    <Grid Name="GridFilms">
        <Label Content="Nombre" Margin="78,49,638.6,335"/>
        <Label Content="Apellidos" Margin="78,109,631.6,277"/>
        <Label Content="Dirección" Margin="80,170,568.6,216"/>
        <Label Content="Código Postal" Margin="80,228,603.6,158"/>
        <Label Content="Teléfono de Contacto" Margin="295,80,346.6,306"/>

        <Label Content="Tu Alquiler" Margin="484,274,207.6,102"/>
        <DataGrid x:Name="datagrid_ToRent" Margin="443,300,169.6,23" DataContext="{Binding Source=aReservar}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombrePelicula}"/>
                <DataGridTextColumn Header="Género" Binding="{Binding GeneroPelicula}"/>
                <DataGridTextColumn Header="Año" Binding="{Binding AñoPelicula}"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding PrecioPelicula}"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
