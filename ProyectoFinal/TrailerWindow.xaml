<Window x:Class="ProyectoFinal.TrailerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal"
        mc:Ignorable="d"
        Title="TrailerWindow" Height="450" Width="531.139">
    <Window.Background>
        <ImageBrush ImageSource="Images/Random/theatre.png"/>
    </Window.Background>
    <Grid>
        <Button x:Name="button_PlayTrailer" Margin="196,351,281.8,23" Click="button_PlayTrailer_Click" BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Images/Icons/play.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button_PauseTrailer" Margin="289,351,188.8,23" Click="button_PauseTrailer_Click" BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Images/Icons/pause.png"/>
            </Button.Background>
        </Button>
        <MediaElement x:Name="MediaElement_Trailer" Margin="43,39,35.8,99" LoadedBehavior="Manual" IsMuted="True" Stretch="Fill"/>
    </Grid>
</Window>
